{% extends 'base.html.twig' %}

{% block title %} Pokemon Community {% endblock %}

{% block content %}
    <div id="content">
        <img src="{{ asset('images/Subgroup/Pokemon/Banner.png') }}">
        <p id="intro">
            Do you like Pokemon? Do you like battling? Do you want to learn how to get ready for a competition? Or maybe you just like the designs? Maybe they're just cool? Whatever the reason, come and hang out with us!
        </p>
        <div class="community-important">
            <div class="community-important-info-header">Meeting</div>
            <div class="community-important-info">SAU Cafeteria: Wed 8PM-11PM </div>
            <div class="community-important-info">Golisano 1300: Fri 5PM-9PM </div>
            <br>
            <div class="community-important-info">Facebook: facebook.com/groups/RITPokemonLeague</div>
        </div>
        <br>
        <div class="board-header">E-Board</div>
        {% include 'utility/board.html.twig' %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{  parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/websiteStyles2.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/homepage/homepage.js') }}"></script>
{% endblock %}
